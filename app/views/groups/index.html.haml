.main-wrapper

  .side-chat
    = render partial: "shared/side-chat"

  .main-chat
    .main-chat__top
      .group-name
        サンプルグループ１
      = link_to "#", class: "edit-button" do
        edit
      .members-list
        MEMBERS: サンプルユーザー
    .main-chat__contents
      = render partial: "shared/contents"
    .main-chat__footer
      %form.post-message
        %input{type: "text", placeholder: "type a message", class: "message"}
        %label
          %input{type: "file", style: "display: none", class: "image"}
            %i{class: "fa fa-image"}
        %input{type: "submit", value: "Send", class: "send-button"}
